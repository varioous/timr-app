<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_timr"
    android:layout_width="match_parent"
    android:background="@drawable/nexus4_wo"
    android:layout_height="match_parent"
    tools:context="timr.varioous.com.timrapp.activity.TimrActivity">

    <de.morrox.fontinator.FontTextView
        android:id="@+id/textViewGreeting"
        android:visibility="invisible"
        android:text="Hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="113dp"
        android:textSize="30dp"
        android:textColor="@color/varioous_green" />

    <de.morrox.fontinator.FontTextView
        android:id="@+id/textViewName"
        android:visibility="invisible"
        android:text="Harald\nHolzmann"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewGreeting"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/varioous_grey"
        android:textSize="62dp" />

    <de.morrox.fontinator.FontTextView
        android:id="@+id/textViewHours"
        android:text="40 (8)"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewName"
        android:layout_marginStart="20dp"
        android:textColor="@color/varioous_grey"
        android:textSize="30dp" />

    <de.morrox.fontinator.FontTextView
        android:id="@+id/textViewTags"
        android:visibility="invisible"
        android:text="#i #am #not #doing #shit #today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textViewHours"
        android:layout_marginStart="20dp"
        android:textColor="@color/varioous_green" />

</RelativeLayout>
